<style>
    body {
        background: linear-gradient(45deg, rgb(11, 70, 105), rgb(129, 0, 26));
        font-family: Arial, sans-serif;
        background-attachment: fixed;

    }

    .header {
        height: 60px;
        width: 95%;
        margin: 20px auto;
        border: 2px solid #f7efef;
        display: flex;
        justify-content: space-between;
        border-radius: 10px;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        color: aliceblue;
        position: fixed;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1000;
        padding: 0 40px;
        box-sizing: border-box;
    }

    .left {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        margin-top: 18px;
        margin-left: 25px;
        font-size: 26px;
        font-weight: bold;
    }

    .right ul {
        display: flex;
        gap: 35px;
        list-style-type: none;
        font-size: 16px;
        margin-right: 25px;
        margin-top: 20px;
        color: #ddd;
    }

    .right ul li {
        cursor: pointer;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .right ul li:hover {
        background-color: #3a3a3a;
        color: #4a9eff;
    }

    .ad {
        margin: 30px auto;
        width: 90%;
        max-width: 1000px;
        height: 250px;
        background-color: #252525;
        border: 2px solid #333;
        border-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        position: relative;
    }

    .loader {
        width: 60px;
        height: 60px;
        position: relative;
    }

    .loader-circle {
        width: 100%;
        height: 100%;
        border: 4px solid rgba(74, 158, 255, 0.2);
        border-top-color: #f00e0e;
        border-radius: 30%;
        animation: spin 2s linear infinite;
    }

    .loader-dots {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: flex;
        gap: 100px;
    }

    .dot {
        width: 10px;
        height: 10px;
        background-color: #4a9eff;
        border-radius: 50%;
        animation: bounce 1.4s ease-in-out infinite;
    }

    .dot:nth-child(1) {
        animation-delay: -0.32s;
    }

    .dot:nth-child(2) {
        animation-delay: -0.16s;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    @keyframes bounce {

        0%,
        80%,
        100% {
            transform: scale(0);
            opacity: 0.5;
        }

        40% {
            transform: scale(1);
            opacity: 1;
        }
    }

    .cards {
        margin: 40px auto 0 auto;
        display: grid;
        grid-template-columns: repeat(3, 270px);
        gap: 35px;
        justify-content: center;
        padding-bottom: 50px;

    }

    .card {
        /* background-color: #363c3d; */
        height: 220px;
        border: 2px solid #000000;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s;
        cursor: pointer;
        background: rgba(255, 255, 255, 0.2);
        /* semi-transparent background */
        backdrop-filter: blur(10px);
        /* âœ… this blurs the background inside */
    }

    .card:hover {
        transform: translateY(-8px);
        border-color: #4a9eff;
        box-shadow: 0 8px 20px rgba(74, 158, 255, 0.3);
    }

    .card a {
        display: block;
        height: 100%;
        width: 100%;
    }

    .card {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 22px;
        font-weight: bold;
        color: #f7c3c3;
    }

    .card a {
        text-decoration: none;
        color: #ffffff;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @media (max-width: 900px) {
        .cards {
            grid-template-columns: repeat(2, 250px);
            gap: 25px;
        }
    }

    @media (max-width: 900px) {
        .view {
            width: 90%;
            height: auto;
            margin-top: 120px;
        }

        .inside {
            width: 90%;
            height: auto;
            font-size: large;
            padding: 15px;
        }
    }

    @media (max-width: 600px) {
        .header {
            flex-direction: column;
            height: auto;
            padding: 15px;
            width: 90%;
        }

        .left {
            margin: 0;
            font-size: 22px;
            text-align: center;
        }

        .right ul {
            margin: 10px 0 0 0;
            gap: 15px;
            font-size: 14px;
            justify-content: center;
            padding: 0;
        }

        .cards {
            grid-template-columns: repeat(2, 1fr);
            width: 90%;
            margin: 30px auto;
            gap: 20px;
            padding: 0 10px;
        }

        .card {
            height: 140px;
            font-size: 18px;
        }

        .view {
            width: 90%;
            height: auto;
            margin-top: 160px;
        }

        .inside {
            width: 85%;
            height: auto;
            font-size: medium;
            padding: 15px;
            margin: 15px;
        }

        .ad {
            height: 150px;
            width: 90%;
        }
    }

    @media (max-width: 400px) {
        .header {
            width: 90%;
            height: auto;
            padding: 10px;
        }

        .left {
            font-size: 20px;
            margin-top: 5px;
            margin-left: 0;
            text-align: center;
        }

        .right ul {
            gap: 10px;
            font-size: 13px;
            margin: 10px 0 0 0;
            justify-content: center;
        }

        .cards {
            grid-template-columns: repeat(1, 1fr);
            width: 100%;
            margin: 30px auto;
            padding-left: 250px;
            gap: 20px;




        }

        .cards a {
            font-size: xx-large;
        }

        .card {
            height: 140px;
            width: 600px;
            font-size: 18px;
        }

        .view {
            width: 90%;
            margin-top: 150px;
        }

        .inside {
            width: 90%;
            font-size: small;
            padding: 12px;
            margin: 10px;
        }

        .ad {
            height: 120px;
        }
    }

    .right ul a {
        text-decoration: none;
        color: white;
    }

    .view {
        height: 200px;
        width: 900px;
        display: flex;
        flex-direction: row;
        justify-self: center;
        background: linear-gradient(135deg, rgba(255, 0, 150, 0.5), rgba(0, 204, 255, 0.5));
        border: 0.5px solid;
        border-radius: 15px;
        margin-top: 120px;
        margin-left: auto;
        margin-right: auto;

    }

    .inside {
        height: 150px;
        width: 850px;
        border-radius: 15px;
        padding-left: 10px;
        padding-top: 10px;
        padding-right: 10px;
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-left: 20px;
        text-align: justify;
        margin-right: 20px;
        font-size: x-large;
        font-family: "Roboto Condensed", sans-serif;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        background: rgba(255, 255, 255, 0.3);
        margin-bottom: 40px;
    }


    .marquee-wrap {
        overflow: hidden;
        white-space: nowrap;
        box-sizing: border-box;
        border: 1px solid #ddd;
        padding: 10px;
        background: #f8f8f8;
    }

    .marquee {
        display: inline-block;
        padding-left: 100%;
        /* start off-screen on the right */
        animation: marquee 12s linear infinite;
        /* to make it focusable for accessibility */
        outline: none;
    }

    /* speed: change 12s to smaller for faster, larger for slower */
    @keyframes marquee {
        0% {
            transform: translateX(0%);
        }

        100% {
            transform: translateX(-100%);
        }
    }

    /* Pause on hover / focus */


    /* make links inside look normal */
    .marquee a {
        text-decoration: none;
        color: #ff0000;
        margin-right: 2rem;
    }

    .marquee-wrap {
        background-color: rgba(31, 8, 8, 0.4);
        width: 900px;
        display: flex;
        justify-self: center;

        margin-top: 20px;



    }
</style>

